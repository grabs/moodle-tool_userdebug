{{!
    @template tool_userdebug/debuginfo

    Moodle template to display the settings.

    Classes required for JS:
    * none

    Context variables required for this template:
    * none

    Example context (json):
    {
        "manageurl": "https://www.example.com",
        "debugsettings": [
            {
                "key": "debug",
                "value": "32767"
            },
            {
                "key": "debugdeveloper",
                "value": "true"
            }
        ]
    }

}}
<div class="m-2">
    <button id="closebutton-{{uniqid}}" title="{{#str}}closebuttontitle{{/str}}" type="button" class="close">&times;</button>
    <h4>{{#str}} debugactiv, tool_userdebug {{/str}}</h4>
    {{#manageurl}}
        <div class="m-1">
            <i class="fa fa-cog fa-fw"></i> <a href="{{.}}">{{#str}} settings {{/str}}</a>
        </div>
    {{/manageurl}}
    <div class="d-flex flex-column border-top p-1">
        {{#debugsettings}}
            <div class="settings-item">
                <strong>{{key}}:</strong> <span>{{value}}</span>
            </div>
        {{/debugsettings}}
    </div>
</div>
{{#js}}
    document.querySelector('#closebutton-{{uniqid}}').addEventListener('click', () => {
        document.querySelector('.tool-userdebug-infobox').remove();
    });
{{/js}}
